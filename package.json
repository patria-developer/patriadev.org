{
    "name": "patriadev.org",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "eslint --fix 'lib/**/*.{ts,tsx}'",
        "format": "prettier --write '**/*.{ts,tsx,css,js,jsx}' --config ./.prettierrc",
        "prepare": "husky && husky install",
        "commit": "cz",
        "lint-staged": "lint-staged"
    },
    "dependencies": {
        "@icons-pack/react-simple-icons": "^11.2.0",
        "@radix-ui/react-accordion": "^1.2.2",
        "@radix-ui/react-dialog": "^1.1.5",
        "@radix-ui/react-slot": "^1.1.1",
        "@typescript-eslint/parser": "^5.0.1",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lucide-react": "^0.468.0",
        "next": "15.1.0",
        "next-seo": "^6.6.0",
        "next-sitemap": "^4.2.3",
        "prettier-eslint": "^16.1.2",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "tailwind-merge": "^2.5.5",
        "tailwindcss-animate": "^1.0.7",
        "vaul": "^1.1.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "^19.6.0",
        "@commitlint/cz-commitlint": "^19.6.1",
        "@commitlint/types": "^19.5.0",
        "@eslint/eslintrc": "3.2.0",
        "@svgr/webpack": "^8.1.0",
        "@types/node": "20.17.10",
        "@types/react": "19.0.1",
        "@types/react-dom": "19.0.2",
        "commitizen": "^4.3.1",
        "eslint": "9.17.0",
        "eslint-config-next": "15.1.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.11",
        "postcss": "8.4.49",
        "prettier": "3.4.2",
        "prettier-plugin-tailwindcss": "0.6.9",
        "tailwindcss": "3.4.16",
        "typescript": "5.1.3"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix --max-warnings=0",
            "prettier --write"
        ],
        "*.{json,css,scss,md}": [
            "prettier --write"
        ]
    },
    "release": {
        "branches": [
            "main"
        ]
    }
}
